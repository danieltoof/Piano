<Window x:Class="Testing.UIChangeInducedByMIDI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Testing.UIChangeInducedByMIDI"
        mc:Ignorable="d"
        Title="MidiTester" Height="450" Width="800">
    <Grid>
        <Rectangle HorizontalAlignment="Left" Height="100" Margin="337,0,0,0" Stroke="Black" VerticalAlignment="Center" Width="100"/>
        <Label Content="Rectangle should become red on MIDI input:" HorizontalAlignment="Left" Margin="264,120,0,0" VerticalAlignment="Top"/>
        <TextBlock Name="MidiTextBlock" Margin="66,294,0,0" TextWrapping="Wrap" Text="{Binding MyLabelText}" VerticalAlignment="Top" Height="65" Width="262"/>

    </Grid>
</Window>
