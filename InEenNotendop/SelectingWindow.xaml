<Window x:Class="InEenNotendop.UI.SelectingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Details" Height="350" Width="700"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Title -->
        <TextBlock Text="{Binding Title}" FontWeight="Bold" Margin="10 5 0 0" Grid.Column="1"/>
        <TextBlock Text="{Binding MoeilijkheidText}" FontWeight="Bold" HorizontalAlignment="Right" Margin="10 5 50 0" Grid.Column="1"/>

        <!-- Lengte -->
        <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10 30 50 0">
            <TextBlock Text="Lengte: "/>
            <TextBlock Text="{Binding Lengte}"/>
        </StackPanel>

        <!-- BPM -->
        <StackPanel Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10 50 50 0">
            <TextBlock Text="BPM: "/>
            <TextBlock Text="{Binding Bpm}"/>
        </StackPanel>

        <!-- Artiest -->
        <TextBlock Text="{Binding Artiest}" Margin="10 20 0 0" Grid.Row="1" Grid.Column="2"/>

        <StackPanel Grid.Column="1" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="10">
            <!-- First Button -->
            <Button Content="PLAY" Height="41" Width="150" Margin="0 0 20 5"/>
            <!-- Second Button -->
            <Button Content="AUTOPLAY" Height="41" Width="150" Margin="0 0 20 20"/>
        </StackPanel>
    </Grid>
</Window>
