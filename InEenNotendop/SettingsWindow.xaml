<Window x:Class="InEenNotendop.UI.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InEenNotendop.UI"
        mc:Ignorable="d"
        Title="Settings" Height="350" Width="700"
        WindowStartupLocation="CenterScreen">
    <Grid Name="SettingsGrid">
        <TextBlock x:Name="SettingsText" Margin="0,32,0,0" FontFamily="Arial Black" FontSize="24" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Top" Width="322"><Run Language="nl-nl" Text="Settings"/></TextBlock>
        <Button Name="DarkOrLightMode" Content="Dark/lightmode" Click="DarkOrLightMode_OnClick" Margin="0,79,0,0" FontSize="16" HorizontalAlignment="Center" Width="254" Height="54" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5"></Button>
    </Grid>
</Window>
