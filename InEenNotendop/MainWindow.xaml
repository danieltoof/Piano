<Window x:Class="InEenNotendop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InEenNotendop"
        mc:Ignorable="d"
        Title="PianoHero"
        Width="{x:Static SystemParameters.PrimaryScreenWidth}"  
        Height="{x:Static SystemParameters.PrimaryScreenHeight}" 
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">
    <Grid Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="991*"/>
            <ColumnDefinition Width="929*"/>
        </Grid.ColumnDefinitions>
        <Image Margin="499,117,499,677" Source="/Resources/LogoLarge.png" Stretch="Fill" Grid.ColumnSpan="2"/>
        <Button Name="StartButton" Content="Start" Click="StartButton_OnClick"  Margin="447,532,387,390" FontSize="24" Foreground="Black" Grid.ColumnSpan="2"/>
        <Button Name="ExitButton" Content="Exit" Click="ExitButton_OnClick" Margin="447,748,387,174" FontSize="24" Grid.ColumnSpan="2"/>
        <Button Name="SettingsButton" Content="Settings" Click="SettingsButton_OnClick" Margin="569,79,10,884" FontSize="16" Grid.Column="1"/>

    </Grid>
</Window>
