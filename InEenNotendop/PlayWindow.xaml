<Window x:Class="InEenNotendop.UI.PlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InEenNotendop.UI"
        mc:Ignorable="d"
        
        Title="PianoHero"
        Width="{x:Static SystemParameters.PrimaryScreenWidth}"  
        Height="{x:Static SystemParameters.PrimaryScreenHeight}" 
        Icon="Resources/icon.png"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="121*"/>
            <ColumnDefinition Width="519*"/>
        </Grid.ColumnDefinitions>
        <!-- Row Definitions: 2/3 for falling notes, 1/3 for piano keys -->
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <!-- Canvas for falling notes -->
        <Canvas Name="PianoCanvas" Background="White" Grid.Row="0" Grid.ColumnSpan="2" />

        <!-- Grid for piano keys -->
        <Grid Name="PianoKeysGrid" Background="Gray" Grid.ColumnSpan="2" Margin="0,709,0,0" Grid.RowSpan="2" />
    </Grid>
</Window>
